<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mulkearn.kevin.patterns.PhyllotaxisActivity"
    tools:showIn="@layout/app_bar_phyllotaxis">

    <LinearLayout
        android:id="@+id/phyloView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@+id/settingsView">
    </LinearLayout>

    <ScrollView
        android:id="@+id/settingsView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/c_value_view"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Spacing Value: 20"
                android:gravity="center_vertical"
                android:background="#BADCFF"
                android:paddingStart="10dp"/>
            <SeekBar
                android:id="@+id/c_seeker"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:max="100"
                android:progress="20"
                android:background="#BADCFF"/>

            <TextView
                android:id="@+id/max_value_view"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Number of Points: 1000"
                android:gravity="center_vertical"
                android:background="#FFBABA"
                android:paddingStart="10dp"/>
            <SeekBar
                android:id="@+id/max_seeker"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:max="2999"
                android:progress="1000"
                android:background="#FFBABA"/>

            <TextView
                android:id="@+id/size_value_view"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Point Size: 10"
                android:gravity="center_vertical"
                android:background="#BAFFC1"
                android:paddingStart="10dp"/>
            <SeekBar
                android:id="@+id/size_seeker"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:max="20"
                android:progress="10"
                android:background="#BAFFC1"/>

            <TextView
                android:id="@+id/angle_value_view"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Angle: 137.5"
                android:gravity="center_vertical"
                android:background="#F1BAFF"
                android:paddingStart="10dp"/>
            <SeekBar
                android:id="@+id/angle_seeker"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:max="100"
                android:progress="50"
                android:background="#F1BAFF"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>